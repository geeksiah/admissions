RewriteEngine On

# Test rule - redirect test-urls to test-urls.php
RewriteRule ^test-urls/?$ test-urls.php [L,QSA]

# Dashboard route
RewriteRule ^dashboard/?$ dashboard.php [L,QSA]

# Admin routes
RewriteRule ^admin/([^/]+)/?$ admin/$1.php [L,QSA]
RewriteRule ^admin/([^/]+)/([^/]+)/?$ admin/$1.php?action=$2 [L,QSA]

# Student routes
RewriteRule ^student/([^/]+)/?$ student/$1.php [L,QSA]
RewriteRule ^student/([^/]+)/([^/]+)/?$ student/$1.php?action=$2 [L,QSA]

# Login routes
RewriteRule ^login/?$ login.php [L,QSA]
RewriteRule ^student-login/?$ student-login.php [L,QSA]

# Profile and logout routes
RewriteRule ^profile/?$ profile.php [L,QSA]
RewriteRule ^logout/?$ logout.php [L,QSA]
